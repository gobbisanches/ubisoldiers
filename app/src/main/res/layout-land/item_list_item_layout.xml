<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="218dp"
    android:layout_height="80dp" android:orientation="horizontal"
    android:background="@drawable/unit_background1" android:padding="4dp" android:minHeight="80dp"
    android:minWidth="218dp" android:gravity="center">

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/itemIconView" android:src="@drawable/rank_corporal" android:layout_gravity="center_vertical|left"
            android:layout_weight="0"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="64dp" android:orientation="vertical"
                  android:layout_weight="0">
        <TextView
                android:layout_width="138dp"
                android:layout_height="32dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Corporal"
                android:id="@+id/nameView" android:textStyle="bold|italic" android:typeface="sans"
                android:paddingLeft="8dp" android:layout_gravity="center_vertical|left" android:singleLine="true"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="32dp" android:layout_gravity="left|top" android:layout_weight="1">
            <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="5"
                    android:id="@+id/stat1TextView" android:layout_column="1" android:layout_gravity="center_vertical"
                    android:textStyle="bold" android:typeface="monospace"
                    android:minWidth="32dp" android:textAlignment="center" android:textIsSelectable="false"
                    android:singleLine="true" android:phoneNumber="false" android:password="false"
                    android:gravity="center|center_vertical" android:maxLines="1"/>
            <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/stat1IconView" android:src="@drawable/attack2" android:layout_column="2"
                    android:contentDescription="A" android:minWidth="32dp" android:maxWidth="32dp"
                    android:minHeight="32dp" android:maxHeight="32dp" android:longClickable="false"
                    android:layout_gravity="center_vertical" android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"/>
            <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="37"
                    android:id="@+id/stat2TextView" android:layout_column="1" android:layout_gravity="center_vertical"
                    android:textStyle="bold" android:typeface="monospace"
                    android:minWidth="32dp" android:textAlignment="center" android:textIsSelectable="false"
                    android:singleLine="true" android:phoneNumber="false" android:password="false"
                    android:gravity="center|center_vertical" android:maxLines="1"/>
            <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/stat2IconView" android:src="@drawable/defense2" android:layout_column="2"
                    android:maxHeight="32dp" android:maxWidth="32dp" android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
